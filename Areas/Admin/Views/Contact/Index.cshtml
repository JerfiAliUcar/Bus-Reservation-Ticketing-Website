@model IEnumerable<ContactMessage>

@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "_AdminLayout";
}

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">Gelen Kutusu</h1>
    <p class="mb-4">İletişim formundan gönderilen müşteri mesajları.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Mesaj Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 15%">Tarih</th>
                            <th style="width: 20%">Gönderen</th>
                            <th style="width: 20%">Konu</th>
                            <th>Mesaj</th>
                            <th style="width: 10%">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <strong>@item.Name</strong><br>
                                    <small class="text-muted">@item.Email</small>
                                </td>
                                <td class="font-weight-bold">@item.Subject</td>
                                <td>
                                    @item.Message
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"
                                       onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center m-3">
                        Henüz hiç mesaj yok.
                    </div>
                }
            </div>
        </div>
    </div>

</div>