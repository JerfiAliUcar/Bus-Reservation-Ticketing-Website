@model Bus

@* @{
    ViewData["Title"] = "Create";
} *@

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1>Otobüs Ekle</h1>
        </div>
    </div>
</div>

<h4 class="ml-2">Otobüs</h4>
<hr />
<div class="row ml-2">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label">PlateNumber</label>
                <input asp-for="PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>

                <label asp-for="FirmName" class="control-label mt-2">FirmName</label>
                <input asp-for="FirmName" class="form-control" />
                <span asp-validation-for="FirmName" class="text-danger"></span>


                <label asp-for="Model" class="control-label mt-2">Model</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>

                <div class="mb-3 form-check">
                    <input class="form-check-input" type="checkbox"
                           id="IsActive"
                           name="IsActive"
                           value="true"
                           checked />

                    <label class="form-check-label" for="IsActive">
                        Aktif Durumda
                    </label>

                    <input name="IsActive" type="hidden" value="false" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-Info ml-2">Listeye Dön</a>
</div>

