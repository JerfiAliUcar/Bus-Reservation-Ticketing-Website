<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusTravel</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header id="header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">

                <a class="navbar-brand font-weight-bold" asp-controller="Home" asp-action="Index" style="font-size: 24px;">
                    BUS TRAVEL
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav ml-auto align-items-center">

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Schedule" asp-action="Index">Tüm Seferler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="AboutUs">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown ml-lg-3">
                                <a class="nav-link dropdown-toggle btn btn-outline-light px-3" href="#" id="userDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user-circle mr-1"></i> @User.Identity.Name
                                </a>

                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item text-danger font-weight-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                            <i class="fa fa-cogs fa-sm fa-fw mr-2"></i> Yönetim Paneli
                                        </a>
                                        <div class="dropdown-divider"></div>
                                    }

                                    <a class="dropdown-item" asp-area="" asp-controller="Booking" asp-action="MyBookings">
                                        <i class="fa fa-ticket fa-sm fa-fw mr-2"></i> Biletlerim
                                    </a>

                                    <div class="dropdown-divider"></div>

                                    <form class="form-inline" asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-muted" style="cursor:pointer;">
                                            <i class="fa fa-sign-out fa-sm fa-fw mr-2"></i> Çıkış Yap
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-lg-3">
                                <a class="nav-link btn btn-sm btn-light text-dark px-3 mb-2 mb-lg-0"
                                   asp-controller="Auth" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item ml-lg-2">
                                <a class="nav-link btn btn-sm btn-warning text-dark px-3"
                                   asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <footer class="footer-area">
        <div class="container text-center">
            <p>Copyright &copy; 2025 BusTravel</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>