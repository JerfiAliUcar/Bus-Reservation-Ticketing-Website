@model RegisterViewModel

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Kayıt Ol</h1>
                        </div>
                        <form asp-controller="Auth" asp-action="Register" method="post" class="user">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input type="text" class="form-control form-control-user" asp-for="FirstName" id="exampleFirstName"
                                           placeholder="First Name">
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input type="text" class="form-control form-control-user" asp-for="LastName" id="exampleLastName"
                                           placeholder="Last Name">
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="form-label"></label>
                                <input type="email" class="form-control form-control-user" asp-for="Email" id="exampleInputEmail"
                                       placeholder="Email Address">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input type="password" asp-for="Password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label" asp-for="ConfirmPassword"></label>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Repeat Password">
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label" asp-for="PhoneNumber"></label>
                                    <input type="number" asp-for="PhoneNumber" class="form-control form-control-user"
                                           id="phonenumber" placeholder="Enter your Phone Number">
                                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                </div>
                                
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Register Account
                            </button>
                            <hr>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-controller="Auth" asp-action="ForgotPassword">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" asp-controller="Auth" asp-action="Login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>