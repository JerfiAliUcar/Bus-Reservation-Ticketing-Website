@{
    ViewData["Title"] = "Ana Sayfa";
}

<section class="banner-area banner-home" style="background-image: url(https://images.unsplash.com/photo-1544620347-c4fd4a3d5957?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80'/img/header-bg.jpg');">
    <div class="overlay-bg"></div> <div class="container">
        <div class="row align-items-center justify-content-between">

            <div class="col-lg-6 banner-content">
                <h1 class="display-4 font-weight-bold text-white">Türkiye'nin Her Yerine<br>Konforlu Yolculuk</h1>
                <p class="mt-3 mb-4 text-white">En uygun fiyatlarla biletini al, güvenle seyahat et.</p>
                
            </div>

            <div class="col-lg-5 banner-content">
                <div class="search-box text-dark">
                    <h4 class="mb-4">Otobüs Bileti Bul</h4>

                    <form asp-controller="Schedule" asp-action="Index" method="get">

                        <input type="text" name="from" class="form-control" placeholder="Nereden (İl)">

                        <input type="text" name="to" class="form-control" placeholder="Nereye (İl)">

                        <input type="date" name="date" class="form-control">

                        <button type="submit" class="primary-btn w-100 border-0">Seferleri Listele</button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>